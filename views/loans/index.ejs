                <tbody>
                    <% loans.forEach(loan => { %>
                        <tr class="text-center">
                            <td class="fw-semibold"><%= loan.book ? loan.book.title : 'Livre inconnu' %></td>
                            <td><%= loan.student ? loan.student.name : 'Ã‰tudiant inconnu' %></td>
